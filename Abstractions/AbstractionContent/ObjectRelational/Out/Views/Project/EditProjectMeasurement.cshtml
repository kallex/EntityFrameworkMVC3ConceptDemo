@model ProjectStatusReporting.MVCModel.EditProjectProjectMeasurementData

@{
    ViewBag.Title = "Edit Project Measurements";
}

<h2>Edit Project Measurements</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Project Measurements</legend>
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.returnViewName)
        <h2>Project Measurements</h2>
        <p>
		        @for(int i = 0; i < Model.ProjectMeasurementList.Count; i++) 
        {
            <div>
            @Html.EditorFor(x => x.ProjectMeasurementList[i], "ProjectMeasurement")
            </div>
        }
		            <input type="submit" name="button" value="Add Measurement" />
        </p>


        <p>
            <input type="submit" name="button" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


