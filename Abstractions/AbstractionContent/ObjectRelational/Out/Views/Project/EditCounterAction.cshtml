@model ProjectStatusReporting.MVCModel.EditProjectCounterActionData

@{
    ViewBag.Title = "Edit Project Counter Actions";
}

<h2>Edit Project Counter Actions</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Project Counter Actions</legend>
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.returnViewName)
        <h2>Project Counter Actions</h2>
        <p>
		        @for(int i = 0; i < Model.CounterActionList.Count; i++) 
        {
            <div>
            @Html.EditorFor(x => x.CounterActionList[i], "CounterAction")
            </div>
        }
		            <input type="submit" name="button" value="Add Measurement" />
        </p>


        <p>
            <input type="submit" name="button" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


